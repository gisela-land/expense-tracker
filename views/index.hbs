<div class="container mt-5">
  <!-- Tool bar -->
  <div class="col-md-10 col-12 mx-auto">
    <div class="row justify-content-center">
      <form action="/" method="GET">
        <div class="col mb-5" style="min-width: 300px;">
          <select class="form-control" id="filterBy" name="filterBy" onchange="action='';submit();">
            <option value="" {{#if (eq filterBy '' ) }} selected {{/if}}>-- 類別 --</option>
            {{!-- {{#each categories}}
            <option {{#if (eq filterBy this.name ) }} selected {{/if}}>{{this.name}}</option>
            {{/each}} --}}
            <option {{#if (eq filterBy '家居物業' ) }} selected {{/if}}>家居物業</option>
            <option {{#if (eq filterBy '交通出行' ) }} selected {{/if}}>交通出行</option>
            <option {{#if (eq filterBy '休閒娛樂' ) }} selected {{/if}}>休閒娛樂</option>
            <option {{#if (eq filterBy '餐飲食品' ) }} selected {{/if}}>餐飲食品</option>
            <option {{#if (eq filterBy '其他' ) }} selected {{/if}}>其他</option>
          </select>
        </div>
      </form>
    </div>
  </div>

  <!-- Total Amount -->
  <div class="col-md-10 col-12 mx-auto">
    <div class="row">
      <div class="col-3 mr-auto" style="height: 20px;">
        <div class="row justify-content-center">
          <h4>總金額：</h4>
        </div>
      </div>
      <div class="col-5 mr-auto" style="height: 80px;">
        <div class="row justify-content-center align-items-center">
          <h1 style="font-size: 60px; color: rgb(255, 115, 0)">{{ totalAmount }}</h1>
        </div>
      </div>
    </div>
  </div>

  <!-- Item -->
  <div class="col-md-10 col-12 mx-auto">
    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item">
        <div class="row align-items-center">
          <div class="col-2 mr-auto justify-content-center" style="height: 40px;">
            <div class="row justify-content-center align-items-center">
              <h1>{{{ this.category }}}</h1>
            </div>
          </div>
          <div class="col-4 mr-auto mt-2 align-items-center">
            <h4 style="height: 20px;">{{ this.name }}</h4>
            <h6 style="height: 20px;">{{ this.date }}</h6>
          </div>
          <div class="col-2 mr-auto" style="height: 40px;">
            <div class="row justify-content-end align-items-center">
              <h4>
                {{ this.amount }}
              </h4>
            </div>
          </div>
          <div class="col-4" style="height: 40px;">
            <div class="row justify-content-end">
              <a class="btn btn-success mr-2" href="./records/{{ this._id }}/edit">修改</a>
              <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button class="btn btn-danger mr-2" type="submit">刪除</button>
              </form>
            </div>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>

  <!-- Create btn -->
  <div class="col-md-10 col-12 mx-auto">
    <div class="row justify-content-center">
      <a class="btn btn-outline-light mt-3"
        style="font-size: 24px; background-color:rgb(255, 115, 0); padding: 10px 50px;" href="/records/new">新增支出</a>
    </div>
  </div>
</div>