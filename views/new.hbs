<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <form action="/records" method="POST">
        <div class="mb-3 row">
          <div class="col-4">
            <h6>*必填欄位</h6>
          </div>
          <div class="col-8" style="text-align: center;">
            <h4>請輸入你的支出</h4>
          </div>
        </div>
        <div class="mb-3 row">
          <label for="name" class="col-sm-4 col-form-label" style="font-size: 20px;">名稱*：</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" style="font-size: 20px;" id="name" name="name" required>
          </div>
        </div>
        <div class="mb-3 row">
          <label for="date" class="col-sm-4 col-form-label" style="font-size: 20px;">日期*：</label>
          <div class="col-sm-8">
            <input type="date" class="form-control" style="font-size: 20px;" id="date" name="date" required>
          </div>
        </div>
        <div class="mb-3 row">
          <label for="category" class="col-sm-4 col-form-label" style="font-size: 20px;">類別*：</label>
          <div class="col-sm-8">
            <select class="form-control" id="category" name="category" required>
              <option value="">-- Select --</option>
              {{#each categories}}
              <option>{{this.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="mb-3 row">
          <label for="amount" class="col-sm-4 col-form-label" style="font-size: 20px;">金額*：</label>
          <div class="col-sm-8">
            <input type="number" class="form-control" style="font-size: 20px;" id="amount" name="amount" min="0"
              required>
          </div>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <button type="submit" class="btn btn-success">新增支出</button>
        </div>
      </form>
    </div>
  </div>
</div>